{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "composite": true,
    // for jumping to things properly in vscode
    "baseUrl": "../..",
    "paths": {
      "tamagui": [
        "packages/tamagui"
      ],
      "@tamagui/*": [
        "packages/*"
      ],
      "@components/*": [
        "packages/site/components/*"
      ],
      "@lib/*": [
        "packages/site/lib/*"
      ],
      "@data/*": [
        "packages/site/data/*"
      ],
      "react-native": [
        "react-native-web"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "tamagui.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../colors"
    },
    {
      "path": "../theme-base"
    },
    {
      "path": "../feather-icons"
    },
    {
      "path": "../tamagui"
    },
    {
      "path": "../next-plugin"
    },
    {
      "path": "../loader"
    }
  ]
}
